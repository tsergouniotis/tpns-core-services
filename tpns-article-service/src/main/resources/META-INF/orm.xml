<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/persistence/orm_2_1.xsd"
	version="2.1">

	<persistence-unit-metadata>
		<xml-mapping-metadata-complete />
		<persistence-unit-defaults>
			<cascade-persist />
		</persistence-unit-defaults>
	</persistence-unit-metadata>


	<mapped-superclass class="com.tpns.domain.article.ArticleInfoExtended"
		access="PROPERTY">
		<attributes>
			<id name="articleId">
				<column name="article_sid" />
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="text">
				<column name="content_text" />
			</basic>
			<basic name="image">
				<column name="image_url" />
			</basic>
			<basic name="settings">
				<column name="image_settings" />
				<enumerated>STRING</enumerated>
			</basic>
		</attributes>
	</mapped-superclass>

	<entity class="com.tpns.domain.article.Kicker">
		<table name="kickers" />
		<attributes>
			<one-to-one name="article" mapped-by="kicker" />
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.Billboard">
		<table name="billboards" />
		<attributes>
			<one-to-one name="article" mapped-by="billboard" />
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.Nutshell">
		<table name="nutshells" />
		<attributes>
			<one-to-one name="article" mapped-by="nutshell" />
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.Article" name="Article"
		cacheable="true" access="FIELD">
		<table name="articles" />
		<entity-listeners>
			<entity-listener class="com.tpns.article.repository.ArticleListener">
				<pre-persist method-name="prePersist" />
				<pre-update method-name="preUpdate" />
			</entity-listener>
		</entity-listeners>
		<attributes>
			<id name="id">
				<column name="database_id" />
				<generated-value strategy="SEQUENCE" generator="ARTICLESEQ" />
				<sequence-generator name="ARTICLESEQ"
					sequence-name="ARTICLESEQ" allocation-size="1" />
			</id>
			<basic name="guid">
				<column name="guid" updatable="false" column-definition="uuid"/>
			</basic>
			<basic name="owner">
				<column name="is_owner" />
			</basic>
			<basic name="author">
				<column name="author" />
			</basic>
			<basic name="headline">
				<column name="headline" length="255" />
			</basic>
			<basic name="subHead">
				<column name="sub_head" length="255" />
			</basic>
			<basic name="content">
				<column name="content" length="8096" />
			</basic>
			<basic name="status">
				<column name="status" length="50" />
				<enumerated>STRING</enumerated>
			</basic>

			<basic name="createdAt">
				<column name="created_at" nullable="false" insertable="false"
					updatable="false" />
			</basic>
			<basic name="updatedAt">
				<column name="updated_at" />
			</basic>
			<basic name="postedAt">
				<column name="posted_at" />
			</basic>

			<version name="version" />

			<one-to-many name="audits" fetch="LAZY">
				<join-column name="article_sid" />
			</one-to-many>

			<one-to-one name="billboard" target-entity="com.tpns.domain.article.Billboard">
				<primary-key-join-column name="article_sid" />
			</one-to-one>

			<one-to-one name="kicker" target-entity="com.tpns.domain.article.Kicker">
				<primary-key-join-column name="article_sid" />
			</one-to-one>

			<one-to-one name="nutshell" target-entity="com.tpns.domain.article.Nutshell">
				<primary-key-join-column name="article_sid" />
			</one-to-one>

			<one-to-one name="lead">
				<primary-key-join-column name="article_sid" />
			</one-to-one>

			<many-to-many name="keywords" fetch="EAGER">
				<join-table name="article_keywords">
					<join-column name="article_sid" />
					<inverse-join-column name="keyword" />
				</join-table>
			</many-to-many>
			<many-to-many name="resources" fetch="EAGER">
				<join-table name="article_resources">
					<join-column name="article_sid" />
					<inverse-join-column name="resource_sid" />
				</join-table>
			</many-to-many>
			<many-to-many name="categories" fetch="EAGER">
				<join-table name="articles_categories">
					<join-column name="article_sid" />
					<inverse-join-column name="category_sid" />
				</join-table>
			</many-to-many>

			<transient name="destinations" />
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.Lead">
		<attributes>
			<id name="articleId">
				<column name="article_sid" />
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="soft">
				<column name="soft_lead" />
			</basic>
			<basic name="hard">
				<column name="hard_lead" />
			</basic>
			<one-to-one name="article" mapped-by="lead" />
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.MediaResource" cacheable="true">
		<table name="resources" />
		<attributes>
			<id name="id" access="FIELD">
				<column name="database_id" />
				<generated-value strategy="SEQUENCE" generator="MEDIARESOURCESEQ" />
				<sequence-generator name="MEDIARESOURCESEQ"
					sequence-name="MEDIARESOURCESEQ" allocation-size="1" />
			</id>
			<basic name="type">
				<column name="resource_type" length="50" />
			</basic>
			<basic name="url">
				<column name="url" length="2048" />
			</basic>
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.Keyword">
		<table name="keywords" />
		<attributes>
			<id name="key" access="FIELD">
				<column name="keyword" />
			</id>
			<version name="version" access="FIELD" />
			<many-to-many name="articles">
				<join-table name="article_keywords">
					<join-column name="keyword" />
				</join-table>
			</many-to-many>
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.Category" name="Category">
		<table name="categories" />
		<attributes>
			<id name="id" access="FIELD">
				<column name="database_id" updatable="false" />
				<generated-value strategy="SEQUENCE" generator="CATEGORYSEQ" />
				<sequence-generator name="CATEGORYSEQ"
					sequence-name="CATEGORYSEQ" allocation-size="1" />
			</id>
			<basic name="name">
				<column name="category_name" length="255" />
			</basic>
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.ApplicationParameter"
		cacheable="true">
		<table name="application_parameters" />
		<named-query name="ApplicationParameter.findByKey">
			<query>SELECT param.value from ApplicationParameter param where param.key=:key</query>
		</named-query>
		<attributes>
			<id name="key" access="FIELD">
				<column name="key" updatable="false" />
			</id>
			<basic name="value">
				<column name="value" length="255" />
			</basic>
		</attributes>
	</entity>

	<entity class="com.tpns.domain.article.Audit">
		<table name="audit" />
		<attributes>
			<id name="id" access="FIELD">
				<column name="database_id" updatable="false" />
				<generated-value strategy="SEQUENCE" generator="AUDITSEQ" />
				<sequence-generator name="AUDITSEQ"
					sequence-name="AUDITSEQ" allocation-size="1" />
			</id>
			<basic name="who" access="FIELD">
				<column name="who" />
			</basic>
			<basic name="what" access="FIELD">
				<column name="what" length="50" />
				<enumerated>STRING</enumerated>
			</basic>
			<basic name="when" access="FIELD">
				<column name="when" nullable="false" insertable="false"
					updatable="false" />
				<temporal>TIMESTAMP</temporal>
			</basic>
		</attributes>
	</entity>

	<converter class="com.tpns.jpa.common.converters.LocalDateAttributeConverter"
		auto-apply="true" />

	<converter
		class="com.tpns.jpa.common.converters.LocalDateTimeAttributeConverter"
		auto-apply="true" />

	<converter class="com.tpns.jpa.postgres.converters.UUIDConverter"
		auto-apply="true" />

</entity-mappings>